  <div class="container">
    <div class="search-filter">
      <input type="text" id="searchInput" placeholder="Search API...">
      <div class="categories">
        <button class="active" onclick="filterCategory('all')">All</button>
        <button onclick="filterCategory('ai')">AI</button>
        <button onclick="filterCategory('orderkuota')">Orderkuota</button>
        <button onclick="filterCategory('downloader')">Downloader</button>
        <button onclick="filterCategory('tools')">Tools</button>
      </div>
    </div>
    <div class="api-list" id="apiList">
      <!-- API cards injected here -->
    </div>
  </div>

  <script>
    const apis = [
      { name: "Chatgpt", desc: "Talk Chatgpt", path: "/ai/openai?text=Hello", category: "ai" },
      { name: "Deepseek", desc: "Talk Deepseek AI", path: "/ai/deepseek?text=Hello", category: "ai" },
      { name: "Create Payment", desc: "Create qris payment", path: "/orderkuota/createpayment?amount=2000&codeqr=0002010102", category: "orderkuota" },
      { name: "Cek Status", desc: "Check payment status", path: "/orderkuota/cekstatus?merchant=MERCHANTID&keyorkut=KEYORKUT", category: "orderkuota" },
      { name: "Tiktok Downloader", desc: "Download TikTok video", path: "/download/tiktok?url=https://www.tiktok.com/@user/video/123", category: "downloader" },
      { name: "Screenshot Web", desc: "Take website screenshot", path: "/tools/ssweb?url=https://example.com", category: "tools" }
    ];

    const apiList = document.getElementById("apiList");
    const searchInput = document.getElementById("searchInput");

    function renderApis(filter = "all", keyword = "") {
      apiList.innerHTML = "";
      apis.filter(api => {
        return (filter === "all" || api.category === filter) &&
               (api.name.toLowerCase().includes(keyword.toLowerCase()) || api.desc.toLowerCase().includes(keyword.toLowerCase()));
      }).forEach(api => {
        const card = document.createElement("div");
        card.className = "api-card";
        card.innerHTML = `
          <h3>${api.name}</h3>
          <p>${api.desc}</p>
          <code>${api.path}</code>
          <button onclick="tryApi('${api.path}')">Try</button>
        `;
        apiList.appendChild(card);
      });
    }

    function filterCategory(category) {
      document.querySelectorAll(".categories button").forEach(btn => btn.classList.remove("active"));
      event.target.classList.add("active");
      renderApis(category, searchInput.value);
    }

    searchInput.addEventListener("input", () => {
      const activeButton = document.querySelector(".categories button.active");
      const activeCategory = activeButton ? activeButton.textContent.toLowerCase() : "all";
      renderApis(activeCategory === "all" ? "all" : activeCategory, searchInput.value);
    });

    function tryApi(path) {
      const url = location.origin + path;
      fetch(url)
        .then(res => res.json())
        .then(data => {
          alert(JSON.stringify(data, null, 2));
        })
        .catch(err => {
          alert("Error fetching API:\n" + err);
        });
    }

    renderApis();
  </script>
</body>
